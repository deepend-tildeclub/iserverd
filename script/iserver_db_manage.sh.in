#!/bin/sh

# Andy Shevchenko <andy@smile.org.ua>

# postgres binaries
PSQL="@PSQL_BIN@/psql"
CREATEDB="@PSQL_BIN@/createdb"
DROPDB="@PSQL_BIN@/dropdb"
DROPUSER="@PSQL_BIN@/dropuser"
DUMP="@PSQL_BIN@/pg_dump"
 
usage() {
    name=`basename $0`
    echo "Usage: $name create database [user [passwd]]"
    echo "  or : $name drop database"
    echo "  or : $name dump database [tempfile]"
    echo "  or : $name restore database tempfile"
    exit 0
}

sql_escape_literal() {
    # SQL string literal escaping: single quote becomes doubled single quote.
    # shellcheck disable=SC2001
    printf "%s" "$1" | sed "s/'/''/g"
}

sql_quote_ident() {
    # SQL identifier escaping: wrap in double-quotes and double embedded quotes.
    # shellcheck disable=SC2001
    escaped=`printf "%s" "$1" | sed 's/"/""/g'`
    printf '"%s"' "$escaped"
}

create() {
    user="$1"; passwd="$2"
    if [ "$user" = "" ]; then
        echo @ECHO_N@ "Please, input database username: @ECHO_C@" ; read user
        while [ "$user" = "" ]; do
	    echo @ECHO_N@ "Please, input database username: @ECHO_C@" ; read user
        done
    fi
 	
    if [ "$passwd" = "" ]; then
        echo @ECHO_N@ "Please, input database user passwd: @ECHO_C@" ; stty -echo ; read passwd ; echo " " ; stty echo
	while [ "$passwd" = "" ]; do
    	    echo @ECHO_N@ "Please, input database user passwd: @ECHO_C@" ; stty -echo ; read passwd ; echo " " ; stty echo
	done
    fi

    # We should create databases
    [ -z "`$PSQL -l | grep -F "$users_db"`" ] && $CREATEDB "$users_db"
    # Database initialization (creating tables, views, etc)
    # create new user role in database if it does not exist yet
    if [ -z "`$PSQL -tA -d "$users_db" -c "SELECT 1 FROM pg_catalog.pg_roles WHERE rolname = '$(sql_escape_literal "$user")'"`" ]
    then
        quoted_user=`sql_quote_ident "$user"`
        escaped_passwd=`sql_escape_literal "$passwd"`
        $PSQL -d "$users_db" -c "CREATE ROLE $quoted_user WITH LOGIN PASSWORD '$escaped_passwd' NOSUPERUSER NOCREATEDB NOCREATEROLE NOINHERIT;"
    fi
}

drop() {
    [ -n "`$PSQL -l | grep -F "$users_db"`" ] && $DROPDB "$users_db"
}

dump() {
    if [ -n "`$PSQL -l | grep -F "$users_db"`" ]; then
        if [ -n "$1" ]; then
    	    $DUMP "$users_db" > "$1"
        else
    	    $DUMP "$users_db"
        fi
    fi
}

restore() {
    if [ -s "$1" ]; then
        create
        $PSQL -c "\i $1" "$users_db"
    fi
}

[ -z "$2" ] && usage
users_db="$2"

case "$1" in
    create)
	create "$3" "$4"
	;;
    drop)
	drop
	;;
    dump)
	dump "$3"
	;;
    restore)
	restore "$3"
	;;
    *)
	usage
	;;
esac