#! /bin/sh
#
# iserverd		Groupware ICQ server clone
#
# LEGACY SysV init helper template (script/iserverd.sh.asp.in).
# Not used by default deployments; systemd unit iserverd.service is preferred.
# chkconfig: 345 95 05
# description: Groupware ICQ Server clone
# processname: iserverd
# pidfile: /run/iserverd/iserverd.pid

# pathes
VAR=@VAR_DIR@
BIN=@BIN_DIR@
SBIN=@SBIN_DIR@

# Legacy compatibility helper for old SysV-init hosts.
unsupported_host() {
	echo "Legacy SysV init helper requires /etc/rc.d/init.d/functions." >&2
	echo "Use systemd instead: systemctl start iserverd.service" >&2
	exit 1
}

# Source function library when present.
[ -r /etc/rc.d/init.d/functions ] || unsupported_host
. /etc/rc.d/init.d/functions

# Get network config when present.
NETWORKING="yes"
if [ -r /etc/sysconfig/network ] ; then
	. /etc/sysconfig/network
fi

# Check that networking is up.
[ "${NETWORKING}" = "no" ] && exit 0

[ -f ${SBIN}/iserverd ] || exit 0 

# Source iserverd configuration.
DATABASE="users_db"
USER="iserverd"
PASSWD="DEFAULT"
if [ -f /etc/sysconfig/iserverd ] ; then
        . /etc/sysconfig/iserverd
fi

RETVAL=0
prog="iserverd"
LOCKFILE="${VAR}/iserverd.pid"

start() {
	# Check database (and create it if need)
	su -l postgres -c "${BIN}/db_manage.sh create $DATABASE $USER $PASSWD"
	# Start daemon.
	echo @ECHO_N@ $"Starting $prog: "
	daemon --user iserverd ${SBIN}/iserverd
	RETVAL=$?
	echo
}

stop() {
        # Stop daemon.
	echo @ECHO_N@ $"Shutting down $prog: "
        [ -f ${VAR}/iserverd.pid ] && \
	    kill -TERM `cat ${VAR}/iserverd.pid` && success || failure
	RETVAL=$?
        echo
        rm -f ${VAR}/iserverd.pid
}

# See how we were called.
case "$1" in
  start)
	start
        ;;
  stop)
	stop
	;;
  restart|reload)
	stop
	sleep 1
	start
	RETVAL=$?
	;;
  condrestart)
        if [ -f "$LOCKFILE" ]; then
            stop
            start
            RETVAL=$?
        fi
        ;;
  status)
	status iserverd
	RETVAL=$?
	;;
  *)
        echo "Usage: `basename $0` {start|stop|restart|condrestart|status}"
        exit 1
esac

exit $RETVAL
